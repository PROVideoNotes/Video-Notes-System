<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Video notes</title>
    @Styles.Render("~/Content/css")
    @RenderSection("cssStyle", required: false)
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="logo navbar-brand">
                    <a href="/" >
                    <img src="~/logo.png" />
                        </a>
                    </div>
              
            </div>
            <div class="navbar-collapse collapse">
                <div id="mb_menu" class="mb_menu">
                    @Html.ActionLink("Home", "Index", "Home")
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Dashboard", "Home", "PersonalNotes")
                            @Html.ActionLink("Search", "Home", "Search")
                        }
                    }
                    @Html.ActionLink("About", "About", "Home")
                    @Html.ActionLink("Contact", "Contact", "Home")
                   
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="search-box-header">
        @RenderSection("searchBox",false)
        </div>
    <div class="container body-content">
        @RenderBody()       
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - PROVideoNotes</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("scripts", required: false)
</body>
</html>
